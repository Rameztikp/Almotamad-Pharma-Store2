# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=pharmacy_db
DB_SSLMODE=disable

# JWT Secrets (REQUIRED - Generate strong random keys for production)
# Use: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-change-this-in-production-32-chars-minimum
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-this-in-production-32-chars-minimum

# Server Configuration
PORT=8080
GIN_MODE=debug

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Application URL (used for generating absolute URLs)
APP_URL=http://localhost:8080

# Cloudinary Configuration
# Get this from your Cloudinary dashboard (e.g., cloudinary://api_key:api_secret@cloud_name)
CLOUDINARY_URL=

